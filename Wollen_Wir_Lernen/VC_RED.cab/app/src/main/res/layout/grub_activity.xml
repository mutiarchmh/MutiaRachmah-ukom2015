<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <Button
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:text="GruB"
        android:textSize="24dp"
        android:id="@+id/grub"
        android:background="#FFCC99"/>

    <Button
        android:layout_width="400dp"
        android:layout_height="64dp"
        android:textSize="24dp"
        android:background="#FFCC99"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="0dp"
        android:id="@+id/btn1"
        android:layout_alignLeft="@+id/grub"
        android:layout_alignStart="@+id/grub" />

    <Button
        android:layout_width="400dp"
        android:layout_height="64dp"
        android:textSize="24dp"
        android:background="#FFCC99"
        android:layout_marginTop="160dp"
        android:id="@+id/btn2"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignStart="@+id/btn1" />

    <Button
        android:layout_width="400dp"
        android:layout_height="64dp"
        android:textSize="24dp"
        android:background="#FFCC99"
        android:layout_marginTop="235dp"
        android:id="@+id/btn3"
        android:layout_alignLeft="@+id/btn2"
        android:layout_alignStart="@+id/btn2" />

    <Button
        android:layout_width="400dp"
        android:layout_height="64dp"
        android:textSize="24dp"
        android:background="#FFCC99"
        android:layout_marginTop="312dp"
        android:id="@+id/btn4"
        android:layout_alignLeft="@+id/btn3"
        android:layout_alignStart="@+id/btn3" />

    <Button
        android:layout_width="400dp"
        android:layout_height="64dp"
        android:textSize="24dp"
        android:background="#FFCC99"
        android:layout_marginTop="387dp"
        android:id="@+id/btn5"
        android:layout_alignLeft="@+id/btn4"
        android:layout_alignStart="@+id/btn4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hallo"
        android:id="@+id/textView1"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/btn1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hai"
        android:id="@+id/textView1a"
        android:textSize="20dp"
        android:textStyle="normal"
        android:layout_alignBottom="@+id/imgPhai"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignStart="@+id/textView1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gutten Morgen"
        android:id="@+id/textView2"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/btn2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Pagi"
        android:id="@+id/textView2a"
        android:textSize="20dp"
        android:textStyle="normal"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gutten Nachmittag"
        android:id="@+id/textView3"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/btn3"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Siang"
        android:id="@+id/textView3a"
        android:textSize="20dp"
        android:textStyle="normal"
        android:layout_alignBottom="@+id/imgPgunach"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gutten Aben"
        android:id="@+id/textView4"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/btn4"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Malam"
        android:id="@+id/textView4a"
        android:textSize="20dp"
        android:textStyle="normal"
        android:layout_alignBottom="@+id/imgPguaben"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vielent Danke"
        android:id="@+id/textView5"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/btn5"
        android:layout_toRightOf="@+id/imageView5"
        android:layout_toEndOf="@+id/imageView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Malam"
        android:id="@+id/textView5a"
        android:textSize="20dp"
        android:textStyle="normal"
        android:layout_alignBottom="@+id/imgPvidanke"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imgPhai"
        android:background="@drawable/btnplay"
        android:clickable="true"
        android:onClick="true"
        android:layout_alignTop="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imgPgumor"
        android:background="@drawable/btnplay"
        android:clickable="true"
        android:onClick="true"
        android:layout_alignBottom="@+id/textView2a"
        android:layout_alignLeft="@+id/imgPhai"
        android:layout_alignStart="@+id/imgPhai" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imgPgunach"
        android:background="@drawable/btnplay"
        android:clickable="true"
        android:onClick="true"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/imgPgumor"
        android:layout_alignStart="@+id/imgPgumor" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imgPguaben"
        android:background="@drawable/btnplay"
        android:clickable="true"
        android:onClick="true"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/imgPgunach"
        android:layout_alignStart="@+id/imgPgunach" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imgPvidanke"
        android:background="@drawable/btnplay"
        android:clickable="true"
        android:onClick="true"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignLeft="@+id/imgPguaben"
        android:layout_alignStart="@+id/imgPguaben" />

    <Button
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:textSize="24dp"
        android:text="1"
        android:background="#FFCC99"
        android:id="@+id/button21"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:onClick="true"
        android:layout_below="@+id/btn5"
        android:layout_toLeftOf="@+id/button22"
        android:layout_toStartOf="@+id/button22" />

    <Button
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:textSize="24dp"
        android:layout_marginTop="10dp"
        android:text="2"
        android:background="#FFCC99"
        android:clickable="true"
        android:onClick="true"
        android:layout_marginLeft="6dp"
        android:id="@+id/button22"
        android:layout_below="@+id/btn5"
        android:layout_alignLeft="@+id/imgPvidanke"
        android:layout_alignStart="@+id/imgPvidanke" />

</RelativeLayout>