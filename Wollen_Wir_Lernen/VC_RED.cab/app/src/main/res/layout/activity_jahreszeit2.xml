<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <Button
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:text="Jahreszeit"
        android:textSize="24dp"
        android:id="@+id/ds"
        android:background="#FFCC99"/>

    <Button
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:textSize="24dp"
        android:layout_marginTop="25dp"
        android:background="#FFCC99"
        android:id="@+id/btn1"
        android:layout_below="@+id/ds"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:textSize="24dp"
        android:background="#FFCC99"
        android:layout_marginTop="12dp"
        android:id="@+id/btn2"
        android:layout_below="@+id/btn1"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:textSize="24dp"
        android:background="#FFCC99"
        android:layout_marginTop="12dp"
        android:id="@+id/btn3"
        android:layout_below="@+id/btn5"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:textSize="24dp"
        android:layout_marginTop="12dp"
        android:background="#FFCC99"
        android:id="@+id/btn4"
        android:layout_below="@+id/btn3"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:textSize="24dp"
        android:background="#FFCC99"
        android:layout_marginTop="12dp"
        android:id="@+id/btn5"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn2"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Juni"
        android:id="@+id/textView1"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btn1"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Juni"
        android:id="@+id/textView1a"
        android:textSize="20dp"
        android:textStyle="normal"
        android:layout_below="@+id/textView1"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignStart="@+id/textView1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Juli"
        android:id="@+id/textView2"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btn2"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Juli"
        android:id="@+id/textView2a"
        android:textSize="20dp"
        android:textStyle="normal"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="September"
        android:id="@+id/textView3"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btn3"
        android:layout_alignLeft="@+id/textView5a" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="September"
        android:id="@+id/textView3a"
        android:textSize="20dp"
        android:textStyle="normal"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="October"
        android:layout_marginLeft="15dp"
        android:id="@+id/textView4"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btn4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oktober"
        android:id="@+id/textView4a"
        android:textSize="20dp"
        android:textStyle="normal"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="August"
        android:id="@+id/textView5"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btn5"
        android:layout_alignLeft="@+id/textView4a"
        android:layout_alignStart="@+id/textView4a" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agustus"
        android:id="@+id/textView5a"
        android:textSize="20dp"
        android:textStyle="normal"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnPjun"
        android:background="@drawable/btnplay"
        android:layout_alignBottom="@+id/textView1a"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnPjul"
        android:background="@drawable/btnplay"
        android:layout_alignBottom="@+id/textView2a"
        android:layout_alignLeft="@+id/btnPjun"
        android:layout_alignStart="@+id/btnPjun" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnPsep"
        android:background="@drawable/btnplay"
        android:layout_alignBottom="@+id/textView3a"
        android:layout_alignLeft="@+id/btnPaug"
        android:layout_alignStart="@+id/btnPaug" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnPoc"
        android:background="@drawable/btnplay"
        android:layout_alignBottom="@+id/textView4a"
        android:layout_alignLeft="@+id/btnPsep" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnPaug"
        android:background="@drawable/btnplay"
        android:layout_alignBottom="@+id/textView5a"
        android:layout_alignLeft="@+id/btnPjul"
        android:layout_alignStart="@+id/btnPjul" />

    <Button
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:textSize="24dp"
        android:text="1"
        android:background="#FFCC99"
        android:id="@+id/button2"
        android:clickable="true"
        android:onClick="true"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/btn4"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3" />

    <Button
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:textSize="24dp"
        android:layout_marginLeft="6dp"
        android:text="2"
        android:background="#FFCC99"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/button2"
        android:clickable="true"
        android:onClick="true"
        android:layout_toLeftOf="@+id/btnPsep"
        android:layout_toStartOf="@+id/btnPsep" />

    <Button
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:textSize="24dp"
        android:layout_marginLeft="6dp"
        android:text="3"
        android:clickable="true"
        android:onClick="true"
        android:background="#FFCC99"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/button3"
        android:layout_alignLeft="@+id/btnPsep"
        android:layout_alignStart="@+id/btnPsep" />

</RelativeLayout>
