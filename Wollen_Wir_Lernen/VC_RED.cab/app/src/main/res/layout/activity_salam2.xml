<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <Button
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:text="GruB"
        android:textSize="24dp"
        android:id="@+id/grub"
        android:background="#FFCC99"/>

    <Button
        android:layout_width="400dp"
        android:layout_height="64dp"
        android:textSize="24dp"
        android:background="#FFCC99"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="0dp"
        android:id="@+id/btn1"
        android:layout_alignLeft="@+id/grub"
        android:layout_alignStart="@+id/grub" />

    <Button
        android:layout_width="400dp"
        android:layout_height="64dp"
        android:textSize="24dp"
        android:background="#FFCC99"
        android:layout_marginTop="160dp"
        android:id="@+id/btn2"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignStart="@+id/btn1" />

    <Button
        android:layout_width="400dp"
        android:layout_height="64dp"
        android:textSize="24dp"
        android:background="#FFCC99"
        android:layout_marginTop="235dp"
        android:id="@+id/btn3"
        android:layout_alignLeft="@+id/btn2"
        android:layout_alignStart="@+id/btn2" />

    <Button
        android:layout_width="400dp"
        android:layout_height="64dp"
        android:textSize="24dp"
        android:background="#FFCC99"
        android:layout_marginTop="312dp"
        android:id="@+id/btn4"
        android:layout_alignLeft="@+id/btn3"
        android:layout_alignStart="@+id/btn3" />

    <Button
        android:layout_width="400dp"
        android:layout_height="64dp"
        android:textSize="24dp"
        android:background="#FFCC99"
        android:layout_marginTop="387dp"
        android:id="@+id/btn5"
        android:layout_alignLeft="@+id/btn4"
        android:layout_alignStart="@+id/btn4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auf Wiedersehen"
        android:id="@+id/textView1"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/btn1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Tinggal (Formal)"
        android:id="@+id/textView1a"
        android:textSize="20dp"
        android:textStyle="normal"
        android:layout_alignBottom="@+id/imgPauf"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignStart="@+id/textView1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tcuss"
        android:id="@+id/textView2"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/btn2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Tinggal (Informal)"
        android:id="@+id/textView2a"
        android:textSize="20dp"
        android:textStyle="normal"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guten Tag"
        android:id="@+id/textView3"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/btn3"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hari Baik"
        android:id="@+id/textView3a"
        android:textSize="20dp"
        android:textStyle="normal"
        android:layout_alignBottom="@+id/imgPtag"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gute Nacht"
        android:id="@+id/textView4"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/btn4"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Malam"
        android:id="@+id/textView4a"
        android:textSize="20dp"
        android:textStyle="normal"
        android:layout_alignBottom="@+id/imgPnacht"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gern Geschehen"
        android:id="@+id/textView5"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/btn5"
        android:layout_toRightOf="@+id/imageView5"
        android:layout_toEndOf="@+id/imageView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sama-sama"
        android:id="@+id/textView5a"
        android:textSize="20dp"
        android:textStyle="normal"
        android:layout_alignBottom="@+id/imgPgarn"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imgPauf"
        android:background="@drawable/btnplay"
        android:clickable="true"
        android:onClick="true"
        android:layout_alignTop="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imgPcus"
        android:background="@drawable/btnplay"
        android:clickable="true"
        android:onClick="true"
        android:layout_alignBottom="@+id/textView2a"
        android:layout_alignLeft="@+id/imgPauf"
        android:layout_alignStart="@+id/imgPauf" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imgPtag"
        android:background="@drawable/btnplay"
        android:clickable="true"
        android:onClick="true"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/imgPcus"
        android:layout_alignStart="@+id/imgPcus" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imgPnacht"
        android:background="@drawable/btnplay"
        android:clickable="true"
        android:onClick="true"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/imgPtag"
        android:layout_alignStart="@+id/imgPtag" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imgPgarn"
        android:background="@drawable/btnplay"
        android:clickable="true"
        android:onClick="true"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignLeft="@+id/imgPnacht"
        android:layout_alignStart="@+id/imgPnacht" />

    <Button
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:textSize="24dp"
        android:text="1"
        android:background="#FFCC99"
        android:id="@+id/button23"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:onClick="true"
        android:layout_below="@+id/btn5"
        android:layout_toLeftOf="@+id/imgPgarn"
        android:layout_toStartOf="@+id/imgPgarn" />

    <Button
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:textSize="24dp"
        android:text="2"
        android:background="#FFCC99"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="6dp"
        android:clickable="true"
        android:onClick="true"
        android:id="@+id/button24"
        android:layout_below="@+id/btn5"
        android:layout_alignLeft="@+id/imgPgarn"
        android:layout_alignStart="@+id/imgPgarn" />

</RelativeLayout>
