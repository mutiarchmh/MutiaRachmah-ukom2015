<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:id="@+id/btnCover"
        android:background="@android:color/holo_orange_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:background="@drawable/quiz"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/btnCover" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spilen"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textSize="28dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton" />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="165dp"
        android:id="@+id/imageButton3"
        android:background="@drawable/sweater"
        android:layout_below="@+id/btnCover"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp" />

    <Button
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:text="der Rock"
        android:textSize="18dp"
        android:id="@+id/button5"
        android:layout_marginTop="13dp"
        android:background="#FFCC99"
        android:layout_below="@+id/imageButton3"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:text="die Bluse"
        android:textSize="18dp"
        android:id="@+id/button6"
        android:background="#FFCC99"
        android:layout_below="@+id/button5"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:text="der Pullover"
        android:textSize="18dp"
        android:id="@+id/button7"
        android:background="#FFCC99"
        android:layout_below="@+id/button6"
        android:layout_marginTop="12dp"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6" />

</RelativeLayout>
